// LetsPratice.cpp : Defines the entry point for the console application.
//
#include "stdafx.h"
#include <string>
#include <iostream>
using namespace std;



int main(int argc, char ** argv)
{
	char s[] = { 's', 't', 'r', 'i', 'n', 'g', 0 };
	//char s[] = "string";
	printf("string is: %s\n ", s);
	//for (int i = 0; s[i]; ++i)
	//for (char * cp = s; *cp; ++cp)
	for (char c : s){
		if (c == 0) break;
		//printf("char is: %c\n ", s[i]);
		//printf("char is: %c\n ", *cp);
		printf("char is: %c\n ", c);
	}
		 	return 0;
}
